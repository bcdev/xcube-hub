# INtelliJ/Flask debug config
PYCHARM_DEBUG=False
FLASK_ENV=development
#XCUBE_HUB_RUN_LOCAL=1
WERKZEUG_RUN_MAIN=1
XCUBE_HUB_DEBUG=1

# AUTH0 management credentials (load externally for test env)
# AUTH0_USER_MANAGEMENT_CLIENT_ID=***
# AUTH0_USER_MANAGEMENT_CLIENT_SECRET=**
AUTH0_DOMAIN=edc.eu.auth0.com
XCUBE_HUB_OAUTH_USER_MANAGEMENT_AUD=https://edc.eu.auth0.com/api/v2/

# SentinelHub Credentials (load externally for test env)
#SH_CLIENT_ID=***
#SH_CLIENT_SECRET=***
#SH_INSTANCE_ID=***

# AWS credentials (load externally for test env)
#AWS_ACCESS_KEY_ID=***
#AWS_SECRET_ACCESS_KEY=***

# K8s Configs
K8S_NAMESPACE=xcube-gen-stage
XCUBE_DOCKER_IMG=quay.io/bcdev/xcube-gen:latest
XCUBE_DOCKER_WEBAPI_IMG=quay.io/bcdev/xcube-gen:latest
XCUBE_HUB_DOCKER_PULL_POLICY=Always
XCUBE_HUB_CACHE_PROVIDER=redis
XCUBE_HUB_REDIS_HOST=xcube-gen-stage-redis

# Service URLs
XCUBE_WEBAPI_URI=https://stage.xcube-gen.brockmann-consult.de
XCUBE_HUB_CALLBACK_URLhttps://stage.xcube-gen.brockmann-consult.de/api/v2/
XCUBE_HUB_OAUTH_AUD=https://stage.xcube-gen.brockmann-consult.de/api/v2/

# OIDC Credentials
OIDC_CLIENT_SECRETS_FILE=client_secrets.json

# Xcube Hub token endpoint configs (load externally for test env)
XCUBE_HUB_TOKEN_SECRET=***

# Config Directories and Files
XCUBE_HUB_CFG_DIR=./test/resources
XCUBE_HUB_CFG_DATAPOOLS=data-pools.yaml
XCUBE_HUB_CFG_DATAPOOLS_SCHEMA=data-pools-schema.yaml
